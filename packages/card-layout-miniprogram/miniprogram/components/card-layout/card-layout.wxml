<view class="km-card-layout" style="{{cardStyle}}">
  <block wx:for="{{elements}}" wx:key="id">
    <image
      wx:if="{{item.type === 'image'}}"
      class="km-card-element km-card-element__image"
      style="{{item.style}}"
      src="{{item.src}}"
      mode="aspectFill"
    />
    <view
      wx:elif="{{item.type === 'icon'}}"
      class="km-card-element km-card-element__icon"
      style="{{item.style}}"
    ></view>
    <view
      wx:else
      class="km-card-element km-card-element__text"
      style="{{item.style}}"
    >
      {{item.content}}
    </view>
  </block>
</view>
