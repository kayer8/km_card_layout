{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "rootDir": "src",
    "outDir": "miniprogram_dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["miniprogram-api-typings"]
  },
  "include": ["src/**/*.ts"]
}
