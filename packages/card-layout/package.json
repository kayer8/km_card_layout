{
  "name": "km-card-layout-component",
  "version": "0.1.0",
  "description": "Responsive business card layout component for Vue 3",
  "type": "module",
  "main": "./dist/card-layout.umd.cjs",
  "module": "./dist/card-layout.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/card-layout.es.js",
      "require": "./dist/card-layout.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "typecheck": "vue-tsc --noEmit",
    "release": "pnpm run typecheck && pnpm run build && npm publish --access public",
    "prepublishOnly": "pnpm run build",
    "demo:install": "pnpm install --dir demo",
    "demo:dev": "pnpm --dir demo dev",
    "demo:build": "pnpm --dir demo build",
    "demo:preview": "pnpm --dir demo preview"
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "km-card-schema": ">=0.1.0"
  },
  "devDependencies": {
    "km-card-schema": "^0.1.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "typescript": "~5.6.2",
    "vite": "^5.4.1",
    "vue": "^3.5.0",
    "vue-tsc": "^2.1.4"
  }
}
